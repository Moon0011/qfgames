<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="45dp"
android:background="@color/bg_blue">
    <!--2017/5/22 隐藏分享-->
    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="16dp"
        android:drawableTop="@mipmap/sbfen"
        android:text="分享"
        android:textColor="@color/white"
        android:textSize="@dimen/text_hint"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_toLeftOf="@id/tv_share"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <ProgressBar
            android:id="@+id/pb_down"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/detail_progressbar_style" />
        <TextView
            android:id="@+id/tv_down_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="下载"
            android:textColor="@color/bg_blue"
            android:textSize="@dimen/text_content" />

    </RelativeLayout>

</RelativeLayout>