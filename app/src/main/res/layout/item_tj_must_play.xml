<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="13dp"
    android:layout_marginTop="21dp"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_play01"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@mipmap/error_pic" />

        <TextView
            android:id="@+id/tv_play01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="北凉悍刀行"
            android:textColor="#232323"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_player01"
            android:layout_width="52dp"
            android:layout_height="26dp"
            android:layout_marginTop="6dp"
            android:background="#72c23f"
            android:text="下载" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_play02"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@mipmap/error_pic" />

        <TextView
            android:id="@+id/tv_play02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="剑雨逍遥"
            android:textColor="#232323"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_player02"
            android:layout_width="52dp"
            android:layout_height="26dp"
            android:layout_marginTop="6dp"
            android:background="#72c23f"
            android:text="下载" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_play03"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@mipmap/error_pic" />

        <TextView
            android:id="@+id/tv_play03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="狼人杀"
            android:textColor="#232323"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_player03"
            android:layout_width="52dp"
            android:layout_height="26dp"
            android:layout_marginTop="6dp"
            android:background="#72c23f"
            android:text="下载" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_play04"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@mipmap/error_pic" />

        <TextView
            android:id="@+id/tv_play04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="魂之轨迹"
            android:textColor="#232323"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_player04"
            android:layout_width="52dp"
            android:layout_height="26dp"
            android:layout_marginTop="6dp"
            android:background="#72c23f"
            android:text="下载" />
    </LinearLayout>
</LinearLayout>